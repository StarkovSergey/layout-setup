{
  "env": {
    //определяем окружение
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb/base"], //подключаем сборник правил
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "strict": "off",
    "max-len": [
      "error",
      150,
      {
        "ignoreUrls": true
      }
    ],
    "no-alert": "off",
    "prefer-destructuring": "off",
    "no-underscore-dangle": "off",
    "max-classes-per-file": "off",
    "no-restricted-syntax": "off",
    "no-labels": "off"
  }
}
